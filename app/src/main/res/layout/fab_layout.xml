                android:visibility="invisible"/>

            <TextView
                android:id="@+id/tvsodo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintEnd_toEndOf="@+id/fab_sodo"
                app:layout_constraintStart_toStartOf="@+id/fab_sodo"
                app:layout_constraintTop_toBottomOf="@+id/fab_sodo"
                android:textColor="@color/white"
               />

