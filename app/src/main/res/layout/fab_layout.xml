            <TextView
                android:id="@+id/tvbuaphu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                app:layout_constraintEnd_toEndOf="@+id/fab_buaphu"
                app:layout_constraintStart_toStartOf="@+id/fab_buaphu"
                app:layout_constraintTop_toBottomOf="@+id/fab_buaphu"
                android:textColor="@color/white"

                />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_sodo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="130dp"
                android:layout_marginBottom="236dp"
                android:src="@drawable/ic_bs1"
                app:backgroundTint="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
